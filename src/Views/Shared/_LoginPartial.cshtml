@using Microsoft.AspNetCore.Identity;
@using optimalweb.Models.Account;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a title="Đăng nhập" class="nav-link text-dark" asp-controller="Account" asp-action="Manage">
                Hello @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <a title="Đăng nhập" class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
                Logout
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a title="Đăng nhập" class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                Đăng nhập
            </a>
        </li>
        <li class="nav-item">
            <a title="Đăng nhập" class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                Đăng kí
            </a>
        </li>
    }
</ul>
